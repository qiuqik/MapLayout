{
  "version": 8,
  "name": "Custom Map Style",
  "sources": {
    "openmaptiles": {
      "type": "raster",
      "tiles": ["https://a.tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "attribution": "&copy; OpenStreetMap contributors"
    },
    "dynamic-geodata": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": []
      }
    }
  },
  "layers": [
    {
      "id": "basemap",
      "type": "raster",
      "source": "openmaptiles",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-hue-rotate": 0, 
        "raster-brightness-min": 0.8, 
        "raster-saturation": 0.9 
      }
    },
    {
      "id": "dynamic-lines",
      "type": "line",
      "source": "dynamic-geodata",
      "filter": ["==", "$type", "LineString"],
      "layout": {
        "visibility": "visible",
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#FF5733",
        "line-width": 3,
        "line-opacity": 0.8
      }
    },
    {
      "id": "dynamic-points",
      "type": "circle",
      "source": "dynamic-geodata",
      "filter": ["==", "$type", "Point"],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "circle-color": "#3366FF", 
        "circle-radius": 6,
        "circle-stroke-color": "#FFFFFF",
        "circle-stroke-width": 1,
        "circle-opacity": 0.9
      }
    }
  ],
  "center": [116.4039, 39.9147],
  "zoom": 10,
  "bearing": 0,
  "pitch": 0
}